.advice-center {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 14px;
  justify-content: center;
  font-family: Arial, sans-serif;
  text-align: center;
  margin: 20px;
}

.advice-options {
  display: flex;
  flex-direction: column;
}

.advice-icon {
  margin: 40rpx;
  width: 80rpx;
  height: 80rpx;
}

.advice-radio {
 margin: 20rpx;
}

.advice-button {
  display: flex;
  flex-direction: row;
  align-items: center;
}

